# ==============================================================================
# NeoXBridge AI - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!

# ==============================================================================
# REQUIRED CONFIGURATION
# ==============================================================================

# OpenAI API Key (Required for AI functionality)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ==============================================================================
# RECOMMENDED CONFIGURATION
# ==============================================================================

# GoPlus Labs API Key (Recommended for security features)
# Get your key from: https://gopluslabs.io/
# This enables malicious address detection and security scanning
GO_PLUS_LABS_APP_KEY=your_goplus_api_key_here

# ==============================================================================
# OPTIONAL CONFIGURATION
# ==============================================================================

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Neo Blockchain Configuration
NEO_RPC_URL=https://mainnet1.neo.coz.io:443
NEO_NETWORK=mainnet
NEO_TIMEOUT=30

# GoPlus Labs Configuration
GO_PLUS_LABS_BASE_URL=https://api.gopluslabs.io
GO_PLUS_LABS_TIMEOUT=10

# Application Settings
DEMO_MODE=true
MOCK_TRANSACTIONS=true
ENABLE_SECURITY_CHECKS=true
REQUIRE_CONFIRMATION=true

# Security Settings
MAX_TRANSFER_AMOUNT=1000
MAX_REQUESTS_PER_MINUTE=60
COOLDOWN_SECONDS=1

# Logging Configuration
LOG_LEVEL=INFO
# LOG_FILE=neoxbridge.log  # Uncomment to enable file logging

# UI Settings
ENABLE_BANNER=true
ENABLE_COLORS=true
CONSOLE_WIDTH=80

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================

# Uncomment these for development/debugging
# LOG_LEVEL=DEBUG
# DEMO_MODE=true
# ENABLE_SECURITY_CHECKS=false

# ==============================================================================
# PRODUCTION SETTINGS
# ==============================================================================

# Recommended for production use:
# DEMO_MODE=false
# MOCK_TRANSACTIONS=false
# ENABLE_SECURITY_CHECKS=true
# REQUIRE_CONFIRMATION=true
# LOG_LEVEL=INFO
# LOG_FILE=neoxbridge_production.log
